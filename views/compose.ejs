    <h1>Compose</h1>
    <form action="/compose" method="post">
        <div class="form-group">
            <label>Title</label>
            <input type="text" class="form-control" name="singleLineText">
        </div>
        <div class="form-group">
            <label>Post</label>
            <textarea class="form-control" name="multiLineText" rows="4"></textarea>
        </div>
        <button class="btn btn-primary" type="submit" name="submitButton" style="margin-top: 9px;">Publish</button>
    </form>
    
